<?xml version="1.0" encoding="UTF-8"?>
<Installer>
    <Name>Kryvo</Name>
    <Version>2.0.0</Version>
    <Title>Kryvo File Encryptor</Title>
    <Publisher>The Kryvo Project</Publisher>
    <ProductUrl>https://kryvo.app</ProductUrl>
    <InstallerWindowIcon>kryvo</InstallerWindowIcon>
    <InstallerApplicationIcon>kryvo</InstallerApplicationIcon>
    <Logo>logo.png</Logo>
    <AllowSpaceInPath>true</AllowSpaceInPath>
    <StartMenuDir>Kryvo</StartMenuDir>
    <TargetDir>@RootDir@/Program Files/@ProductName@</TargetDir>
    <AdminTargetDir>@RootDir@/Program Files/@ProductName@</AdminTargetDir>
</Installer>
