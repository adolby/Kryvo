<?xml version="1.0" encoding="UTF-8"?>
<Installer>
    <Name>Kryvos</Name>
    <Version>0.9.9</Version>
    <Title>Kryvos File Encryptor</Title>
    <Publisher>The Kryvos Project</Publisher>
    <ProductUrl>https://github.com/adolby/Kryvos/</ProductUrl>
    <InstallerWindowIcon>kryvos</InstallerWindowIcon>
    <InstallerApplicationIcon>kryvos</InstallerApplicationIcon>
    <Logo>logo.png</Logo>
    <AllowSpaceInPath>true</AllowSpaceInPath>
    <StartMenuDir>Kryvos</StartMenuDir>
    <TargetDir>@HomeDir@/@ProductName@</TargetDir>
    <AdminTargetDir>@ApplicationsDir@/@ProductName@</AdminTargetDir>
</Installer>
