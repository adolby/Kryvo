/*--------- Main window ---------*/
QMainWindow {
  background-color: #2c3e50;
  margin: 0;
  padding: 0;
}

/*--------- Layout containers ---------*/
QFrame#mainFrame {
  background-color: #ecf0f1;
  margin: 0;
  padding: 0;
}

QFrame#contentFrame {
  background-color: #2c3e50;
  margin: 2px;
  padding-bottom: 5px;
}

QFrame#headerFrame {
  background-color: #2c3e50;
  margin-right: 10px;
  margin-bottom: 15px;
  margin-left: 10px;
}

QLabel#headerImageLabel {
  margin-right: 20px;
}

QFrame#fileListFrame {
  background-color: #2c3e50;
  margin-right: 6px;
  margin-left: 6px;
}

QFrame#messageFrame {
  background-color: #4b77be;
  margin-right: 6px;
  margin-left: 6px;
}

QFrame#passwordFrame {
  background-color: #2c3e50;
  margin-top: 15px;
  margin-right: 20px;
  margin-left: 20px;
  margin-bottom: 20px;
}

QFrame#controlButtonFrame {
  background-color: #2c3e50;
}

QFrame#settingsFrame {
  background-color: #2c3e50;
  margin: 2px;
  padding-bottom: 5px;
}

QFrame#settingsSubFrame {
  border-color: white;
  border-style: solid;
  border-width: 2px;
  border-radius: 5px;
}

/*--------- Buttons ---------*/
#pauseButton {
  color: white;
  background-color: #2980b9;
  font-size: 20px;
  padding: 10px 20px 10px 20px;
  border: none;
  border-radius: 5px;
}

#pauseButton:checked {
  background-color: #3498db;
}

#addButton {
  color: white;
  background-color: #27ae60;
  font-size: 20px;
  padding: 10px 20px 10px 20px;
  border: none;
  border-radius: 5px;
}

#addButton:pressed {
  background-color: #2ecc71;
}

#clearButton {
  color: white;
  background-color: #c0392b;
  font-size: 20px;
  padding: 10px 20px 10px 20px;
  border: none;
  border-radius: 5px;
}

#clearButton:pressed {
  background-color: #e74c3c;
}

#cryptButton {
  color: white;
  background-color: #2980b9;
  font-size: 21px;
  padding: 10px 20px 10px 20px;
  border: none;
  border-radius: 5px;
}

#cryptButton:pressed {
  background-color: #3498db;
}

#settingsButton {
  color: white;
  background-color: #7f8c8d;
  font-size: 20px;
  padding: 10px 20px 10px 20px;
  border: none;
  border-radius: 5px;
}

#settingsButton:pressed {
  background-color: #95a5a6;
}

#backButton {
  color: white;
  background-color: #8e44ad;
  font-size: 20px;
  padding: 10px 20px 10px 20px;
  border: none;
  border-radius: 5px;
}

#backButton:pressed {
  background-color: #9b59b6;
}

#messageNavButton {
  background-color: #4b77be;
  font-size: 18px;
  border: none;
}

/*--------- Password Line Edit ---------*/
QLineEdit#passwordLineEdit {
  font-size: 20px;
  padding: 6px;
}

/*--------- Text ---------*/
QLabel#text {
  color: white;
  font-size: 20px;
}

QLabel#headerText {
  color: #fab52a;
  font-size: 38px;
}

#message {
  color: white;
  background-color: #4b77be;
  font-size: 18px;
  padding: 1px;
  border: none;
}

QComboBox#settingsComboBox {
  font-size: 20px;
}

QCheckBox#settingsCheckBox {
  color: white;
  font-size: 20px;
  spacing: 5px;
}

QCheckBox#settingsCheckBox:indicator {
  width: 20px;
  height: 20px;
}

/*--------- File list view ---------*/
QTableView {
  font-size: 20px;
}

QTableView::item {
  border: none;
  margin-right: 10px;
}

QTableView::item:selected:!active {
  color: black;
  background-color: white;
}

QTableView::item:selected:active {
  color: black;
  background-color: white;
}

QTableView::item:hover {
  color: black;
  background-color: white;
}
